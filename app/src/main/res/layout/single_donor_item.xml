<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/imageCallButton"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"
        android:src="@drawable/phone_permission" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/imageCallButton"
        android:layout_toRightOf="@+id/imageCallButton"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.90"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:id="@+id/textDonorName"
            android:textAlignment="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.90"
            android:text="Branch"
            android:id="@+id/textDonorBranch"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.91"
            android:id="@+id/textDonorYear"
            android:text="Year"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/imageMailButton"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"
        android:src="@drawable/email" />
</LinearLayout>